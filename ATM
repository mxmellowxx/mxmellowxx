void pin(int & v1, int & v2){
    int v3;
if(v2!=v1){cout<<"\nCONFIRM YOUR PIN NUMBER: ";
cin>>v3;}
    else{cout<<"\n*NEW PIN CANNOT BE OLD PIN*\n";
    exit(0);}
 if(v2==v3){cout<<"\nPIN IS CHANGED SUCCESSFULLY\n";
 v1=v2;
 }
   else{cout<<"\nPASSWORDS ARE MISMATCHING";}}



   void withdrawal(float & x1, float & x2){
      if(x1>x2){
       x1=x1-x2;
      cout<<"\nTRANSACTION PROCCESSING....\n\nYOUR CURRENT BALANCE IS "<<x1<<".INR";}
      else{cout<<"\nMONEY IS NOT DEDUCTED\n";}}


